/* pages/home/recruitment/recruitment.wxss */
page{
  background: #f7f7f7;
}

.top-card {
  font-size: 20px;
  margin: 20px 16px 8px;
  color: #333333;
}
.subtitle {
  color: #777777;
  display: block;
  padding: 0 16px;
  font-size: 14px;
}

.card {
  margin: 12px 8px;
  padding: 14px 14px 8px;
  border-radius: 4px;
  background: #fff;
  box-shadow: 0 8px 12px #ebedf0;
}
.card .bottom-line {
  margin: 4px 0;
  font-size: 14px;
  color: #555555;
}
.card .bottom-line .company{
  float: right;
}
.card .bottom-line .industry{
}

.item {
  display: flex;
  flex-direction: row;
}
.item .left {
  flex: 1;
  padding-right: 8px;
}
.item .left .title{
  font-size: 18px;
  color: #509fc9;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.item .left .content{
  width: 100%;
  color: #888888;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.item .right {
  display: flex;
  flex-direction: column;
}
.item .right .wage{
  display: block;
  text-align: center;
  font-size: 20px;
  color: rgb(233, 82, 44);
}
.item .right .area{
  margin-bottom: 4px;
  display: block;
  text-align: center;
  font-size: 14px;
  color: #666666;
}
.item .right image{
  width: calc(100vw / 4);
  height: calc(100vw / 4.5);
}

/* 上拉加载更多 */
.loading {
  padding: 14px 0;
  display: flex;
  justify-content: center;
  color: rgb(133, 133, 133);
}