/**index.wxss**/
page{
  background: #f5f5f5;
  padding-bottom: 45px;
}
.swiper-index {
  width: 100%;
  height: 200px;
}
.swiper-index image{
  width: 100%;
}

.gridBtn {
  background: #fff;
  width: 100%;
  margin-bottom: 8px;
}
.grid-icon {
  width: 24px;
  height: 24px;
  padding: 8px;
  background-color: #87c38f;
  border-radius: 50px;
}
.grid-text {
  color: #373737;
  font-size: 14px;
  margin: 4px 0 0;
}


.popularCard {
  background: #fff;
  padding: 14px 16px;
}
.popularCard .cardHeader {
  margin-bottom: 16px;
  display: flex;
  align-items: center;
}
.popularCard .cardHeader .left {
  display: inline-block;
  flex: 1;
}
.popularCard .cardHeader .left .text{
  margin-left: 4px;
}
.popularCard .cardHeader .right {
  color: #696969;
  padding: 4px 0 4px 8px;
  display: flex;
  align-items: center;
}
.popularCard .cardHeader .right .text{
  color: #7e7e7e;
  font-size: 14px;
}
.popularCard .title{
  font-size: 16px;
  display: block;
}
.popularCard .time{
  color: #9b9b9b;
  font-size: 14px;
  display: block;
}
.popularCard .item {
  margin: 8px 0;
}
