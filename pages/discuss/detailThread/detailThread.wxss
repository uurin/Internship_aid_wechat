/* pages/discuss/detailThread/detailThread.wxss */
page{
    background: #f5f5f5;
    padding-bottom: 45px;
}
.threadContent {
    padding: 16px 16px 20px;
    background-color: #fff;
}
.thread-info {
    width: 100%;
    margin-bottom: 4px;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.thread-info .headicon {
    width: 40px;
    height: 40px;
    min-width: 40px;
    min-height: 40px;
    margin-right: 8px;
    border-radius: 50px;
}
.thread-info .name {
    display: block;
    font-size: 16px;
}
.thread-info .time {
    color: #9b9b9b;
    font-size: 14px;
}
.thread-info .other {
    display: inline-block;
    position: absolute;
    font-size: 14px;
    right: 20px;
    color: #9b9b9b;
}
.thread-info .other .icon {
    display: inline-block;
    position: relative;
    bottom: -2px;
    margin: 0 3px 0 6px;
}
.threadContent .title,
.threadContent .content,
.threadContent .images {
    margin-left: 2px;
    margin-right: 2px;
    display: block;
}
.threadContent .title {
    font-size: 18px;
    padding: 4px 0 4px 2px;
    color: rgba(55, 55, 55, 1);
}
.threadContent .content {
    color: #696969;
    font-size: 16px;
    padding: 2px 0 4px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.threadContent .images {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: start;
    padding: 4px 0;
}
.threadContent .images image {
    width: 30%;
    height: 100px;
    object-fit: cover;
    margin-right: 2%;
}


.separateBar {
    margin-top: 8px;
    padding: 16px 16px 0;
    color: #373737;
    background: #fff;
}


.commentCard {
    display: flex;
    flex-direction: row;
    /*margin: 6px 0;*/
    padding: 14px 16px;
    background: #fff;
}
.commentCard .headicon {
    width: 40px;
    height: 40px;
    min-width: 40px;
    min-height: 40px;
    margin-right: 8px;
    border-radius: 50px;
}
.commentCard .name {
  font-size: 16px;
  display: block;
}
.commentCard .content {
  color: #696969;
  font-size: 16px;
  display: block;
  margin-top: 6px;
}
.commentCard .time {
    color: #9b9b9b;
    font-size: 14px;
    display: block;
    margin-top: 2px;
    margin-bottom: 2px;
}
.commentCard .images {
    width: 100%;
    flex: 1;
    display: flex;
    flex-direction: row;
    justify-content: start;
    padding: 4px 0;
}
.commentCard .images image {
    width: 35%;
    height: 100px;
    object-fit: cover;
    margin-right: 2%;
}



.reply-box {
    background: #f0f0f0;
    display: block;
    padding: 8px;
    transition: all .2s ;
}
.reply-box-hover {
    background: #cdcdcd;
}
.reply-box .reply-item {
    width: 100%;
    margin: 4px 0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.reply-item .reply-name{
    color: #4da7ff;
    display: inline;
}
.reply-item .reply-content{
    color: #626262;
    display: inline;
}
.reply-box .reply-more {
  color: #858585;
  padding-top: 4px;
}


.text-withoutComment {
  font-size: 16px;
  color: #8d8d8d;
  display: block;
  text-align: center;
  margin: 4rem 0
}


/* 底部操作栏的总容器 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
}


/* 评论菜单的描述文字 */
.menu-description {
  font-size: 14px!important;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

/* 上拉加载更多 */
.loading {
  padding: 8px 0;
  display: flex;
  justify-content: center;
  color: rgb(133, 133, 133);
}