/* pages/discuss/detailThread/detailThread.wxss */
page{
    background: #f5f5f5;
    padding-bottom: 45px;
}
.threadContent {
    padding: 16px;
    background-color: #fff;
}
.thread-info {
    width: 100%;
    margin-bottom: 4px;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.thread-info .headicon {
    width: 40px;
    height: 40px;
    min-width: 40px;
    min-height: 40px;
    margin-right: 8px;
    border-radius: 50px;
}
.thread-info .name {
    display: block;
    font-size: 16px;
}
.thread-info .time {
    color: #9b9b9b;
    font-size: 14px;
}
.thread-info .other {
    display: inline-block;
    position: absolute;
    font-size: 14px;
    right: 20px;
    color: #9b9b9b;
}
.thread-info .other .icon {
    display: inline-block;
    position: relative;
    bottom: -2px;
    margin: 0 3px 0 6px;
}
.threadContent .title,
.threadContent .content,
.threadContent .images {
    margin-left: 2px;
    margin-right: 2px;
    display: block;
}
.threadContent .title {
    font-size: 18px;
    padding: 4px 0 4px 2px;
    color: rgba(55, 55, 55, 1);
}
.threadContent .content {
    color: #696969;
    font-size: 16px;
    padding: 2px 0 4px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.threadContent .images {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: start;
    padding: 4px 0;
}
.threadContent .images image {
    width: 30%;
    height: 80px;
    object-fit: cover;
    margin-right: 2%;
}


.separateBar {
    padding: 8px 16px;
    color: #919191;
}


.commentCard {
    display: flex;
    margin: 6px 0;
    padding: 16px;
    background: #fff;
}
.commentCard .headicon {
    width: 40px;
    height: 40px;
    min-width: 40px;
    min-height: 40px;
    margin-right: 8px;
    border-radius: 50px;
}
.commentCard .name {
  font-size: 16px;
  display: block;
  margin-bottom: 8px;
}
.commentCard .content {
  color: #696969;
  font-size: 16px;
  display: block;
}
.commentCard .time {
    color: #9b9b9b;
    font-size: 14px;
    display: block;
    margin-top: 2px;
    margin-bottom: 2px;
}
.commentCard image {
    width: 40%;
    height: 80px;
    object-fit: cover;
    margin-right: 2%;
    margin-top: 8px;
}

.reply-in-comment {
    background: #f0f0f0;
    padding: 8px;
    transition: all .2s ;
}
.reply-in-comment-hover {
    background: #cdcdcd;
}
.reply-in-comment .reply-name{
    color: #4da7ff;
    display: inline-block;
}
.reply-in-comment .reply-content{
    color: #737373;
    display: inline-block;
}