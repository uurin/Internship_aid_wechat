/* pages/discuss/detailThread/detailThread.wxss */
page{
    background: #f5f5f5
}
.threadContent {
    padding: 10px 10px;
    background-color: #fff;
}
.info {
    width: 100%;
    padding: 8px 8px 4px;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.info .headicon {
    width: 40px;
    height: 40px;
    margin-right: 8px;
    border-radius: 50px;
}
.info .name {
    display: block;
    font-size: 16px;
}
.info .time {
    color: #9b9b9b;
    font-size: 14px;
}
.info .other {
    display: inline-block;
    position: absolute;
    font-size: 14px;
    right: 20px;
    color: #9b9b9b;
}
.info .other .icon {
    display: inline-block;
    position: relative;
    bottom: -2px;
    margin: 0 3px 0 6px;
}
.title, .content, .images {
    margin-left: 10px;
    margin-right: 10px;
    display: block;
}
.title {
    font-size: 18px;
    padding: 4px 0 4px 2px;
    color: rgba(55, 55, 55, 1);
}
.content {
    color: #696969;
    font-size: 16px;
    padding: 2px 0 4px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.images {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: start;
    padding: 4px 0;
}
.images image {
    width: 30%;
    height: 80px;
    object-fit: cover;
    margin-right: 2%;
}