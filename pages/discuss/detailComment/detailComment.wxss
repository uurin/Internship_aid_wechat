/* pages/discuss/detailComment/detailComment.wxss */
page{
    background: #f5f5f5;
    padding-bottom: 45px;
}


.comment {
    display: flex;
    background: #fff;
}
.comment .headicon {
    width: 40px;
    height: 40px;
    min-width: 40px;
    min-height: 40px;
    margin-right: 8px;
    border-radius: 50px;
}
.comment .name {
    font-size: 16px;
    display: block;
    margin-bottom: 8px;
}
.comment .content {
    color: #696969;
    font-size: 16px;
    display: block;
}
.comment .time {
    color: #9b9b9b;
    font-size: 14px;
    display: block;
    margin-top: 2px;
    margin-bottom: 2px;
}
.comment image {
    width: 40%;
    height: 80px;
    object-fit: cover;
    margin-right: 2%;
    margin-top: 8px;
}


.commentCard {
    padding: 16px 16px 8px;
}
.replyCard {
    padding: 16px;
    margin-bottom: 2px;
}


.belongThread {
    padding: 12px 16px;
    background: #fff;
}
.belongThread text {
    font-size: 14px;
    /*color: #373737;*/
    color: #4793eb;
}


.separateBar {
    margin-top: 8px;
    padding: 16px 16px 0;
    color: #373737;
    background: #fff;
}