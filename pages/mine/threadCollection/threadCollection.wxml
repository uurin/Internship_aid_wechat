<!--pages/mine/threadCollection/threadCollection.wxml-->
<wxs module="dateUtil" src="../../../utils/util.wxs"></wxs>

<view>

  <van-dropdown-menu>
    <van-dropdown-item value="{{ menuValue }}" 
                       options="{{ menuOption }}"
                       bind:change="onChangeType" />
  </van-dropdown-menu>

  <view class="threadCard" 
        wx:for="{{ collectionsData }}" 
        wx:key="postId" 
        data-threadid="{{ item.postId }}"
        bindtap="bindTapCard">
    <text class="title">{{ item.title }}</text>
    <text class="content">{{ item.content }}</text>
    <view class="info">
      <image class="avatar" src="{{ 'https://secure.gravatar.com/avatar/294fc41a0551cb235455b29356002f46?s=500&r=X&d=' }}" />
      <text class="name">{{ item.nameString }}</text>
      <!-- <view class="icon-group">
        <van-icon custom-class="icon" class="icon" name="good-job-o" />
        <text>{{ item.likeNum }}</text>
      </view>
      <view class="icon-group">
        <van-icon custom-class="icon" class="icon" name="comment-o" />
        <text>{{ item.comment }}</text>
      </view> -->
      <text class="time">{{ dateUtil.toNTimeAgo(item.date) }}</text>
    </view>
  </view>

  <!-- 上拉加载更多 -->
  <view class="loading" >
    <text size="24px">{{ loadingText }}</text>
  </view>

</view>
