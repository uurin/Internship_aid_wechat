/* pages/mine/history/history.wxss */
page{
    background: #f7f7f7
}

.top-card {
  font-size: 20px;
  margin: 20px 16px 10px;
  color: #333333;
}
.subtitle {
  color: #777777;
  display: block;
  padding: 0 16px;
  font-size: 14px;
}

.threadCard {
    padding: 14px 14px 6px;
    background-color: #fff;
    margin: 12px 8px;
    box-shadow: 0 8px 12px #ebedf0;
    border-radius: 2px;
}
.info {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 15px;
    color: #9b9b9b;
    margin-top: 6px;
}
.icon-group text{
    margin-left: 2px;
}
.info .time {
    position: absolute;
    right: 20px;
}
.title {
    display: block;
    font-size: 17px;
    color: #2b2b2b;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.name {
    display: block;
    font-size: 15px;
    color: #777777;
}

/* 上拉加载更多 */
.loading {
  padding: 14px 0;
  display: flex;
  justify-content: center;
  color: rgb(133, 133, 133);
}