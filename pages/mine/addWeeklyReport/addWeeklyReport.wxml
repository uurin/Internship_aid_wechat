<!--pages/mine/addWeeklyReport/addWeeklyReport.wxml-->
<view>

  <view class="title">
    <van-field
            value="{{ formData.title }}"
            placeholder="请输入标题"
            title="标题"
            maxlength="50"
            size="large"
            bind:change="onChangeTitle"
            required
    />
  </view>
  <view class="content">
      <textarea
              value="{{ formData.content }}"
              placeholder="请输入周记内容"
              title="内容"
              type="textarea"
              maxlength="1000"
              bindinput="onChangeContent"
              required
      />
      <text class="markTextSize">{{ markContentSize }}</text>
  </view>

  <view class="btn-submit">
    <van-button bindtap="submitForm" type="info" block>添加</van-button>
  </view>
</view>