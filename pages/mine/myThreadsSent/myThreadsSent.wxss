page{
    background: #f5f5f5
}

.threadCard {
    padding: 16px;
    margin: 4px 0;
    background-color: #fff;
}
.info {
    width: 100%;
    margin-bottom: 6px;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.info .name {
    display: block;
    font-size: 16px;
    color: #000;
}
.info .time {
    color: #9b9b9b;
    font-size: 14px;
    position: absolute;
    right: 20px;
}
.title {
    display: block;
    font-size: 14px;
    color: #696969;
}

.text-without {
  font-size: 16px;
  color: #8d8d8d;
  display: block;
  text-align: center;
  margin: 4rem 0
}