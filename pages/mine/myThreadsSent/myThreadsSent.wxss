/* pages/mine/myThreadsSent/myThreadsSent.wxss */
page{
    background: #f5f5f5
}

.threadCard {
    padding: 14px 14px 10px;
    background-color: #fff;
    margin: 12px 8px;
    box-shadow: 0 8px 12px #ebedf0;
    border-radius: 2px;
}
.info {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 15px;
    color: #9b9b9b;
}
.info .icon-group {
    margin-right: 8px;
}
.icon-group .icon{
    position: relative;
    top: 1px;
}
.icon-group text{
    margin-left: 2px;
}
.info .time {
    position: absolute;
    right: 20px;
}
.title {
    display: block;
    font-size: 17px;
    color: #2b2b2b;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.content {
    display: block;
    margin: 2px 0 8px;
    font-size: 15px;
    color: #777777;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

/* 上拉加载更多 */
.loading {
  padding: 14px 0;
  display: flex;
  justify-content: center;
  color: rgb(133, 133, 133);
}