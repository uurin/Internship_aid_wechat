<!--components/commentBox/commentBox.wxml-->
<view class="commentBox">
  <view>
    <van-row>
      <van-col span="20">
        <van-field value="{{ commentValue }}" class="input" placeholder="写回复..."></van-field>
      </van-col>
      <van-col span="4">
        <van-button custom-class="btn-send" bindtap="bindSendTap">发送</van-button>
      </van-col>
    </van-row>
  </view>
</view>
