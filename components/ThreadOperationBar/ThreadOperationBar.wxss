/* components/ThreadOperationBar/ThreadOperationBar.wxss */
.commentBox {
  /* position: fixed;
  bottom: 0; */
  width: 100%;
  background: #fff;
  box-shadow: 0 0 6px rgb(205, 205, 205);
}

.main {
  width: 100%;
  display: flex;
  align-items: center;
  border-bottom: 1px rgb(223, 223, 223);
  transition: all .2s ease-in;
}
.main .input {
  font-size: 16px;
  flex: 1;
}
.main .btn-icon {
  box-shadow: none;
  border: none;
}
.main .btn-send {
  box-shadow: none;
  border: none;
}


.panel {
  width: 100%;
  padding: 6px;
}




.btn-input {
  width: 100%;
  box-shadow: none;
  border: none;
  justify-content: left;
}

.btn {
  box-shadow: none;
  border: none;
  font-size: 16px;
  padding: 0 10px 0 12px;
}
.btn-number {
  position: relative;
  margin-left: -2px;
  font-size: 12px;
  margin-bottom: 4px;
}