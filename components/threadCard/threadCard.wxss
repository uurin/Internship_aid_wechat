/* components/threadCard/threadCard.wxss */
.threadCard {
    padding: 16px;
    background-color: #fff;
}
.info {
    width: 100%;
    margin-bottom: 4px;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.info .headicon {
    width: 38px;
    height: 38px;
    min-width: 38px;
    min-height: 38px;
    margin-right: 6px;
    border-radius: 50px;
}
.info .name {
    display: block;
    font-size: 16px;
}
.info .time {
    color: #9b9b9b;
    font-size: 14px;
}
.info .other {
    display: inline-block;
    position: absolute;
    font-size: 14px;
    right: 20px;
    color: #9b9b9b;
}
.info .other .icon {
    display: inline-block;
    position: relative;
    bottom: -2px;
    margin: 0 3px 0 6px;
}
.title, .content, .images {
    /* margin-left: 10px;
    margin-right: 10px; */
    display: block;
}
.title {
    font-size: 17px;
    margin: 4px 0;
    color: rgb(66, 66, 66);
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.content {
    color: #777777;
    font-size: 14px;
    margin: 4px 0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
}
.images {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: start;
    padding: 4px 0;
}
.images image {
    width: 30%;
    height: 80px;
    object-fit: cover;
    margin-right: 2%;
}